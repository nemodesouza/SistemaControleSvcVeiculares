class TelaSistema:

    def tela_opcoes(self):
        print("-------- Sistema Revisao de Veiculos ---------")
        print("Escolha sua opcao")
        print("1 - Veiculo")
        print("2 - Revisao")
        print("0 - Finalizar sistema")
        opcao = int(input("Escolha a opcao: ")) 
        return opcao
